<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0ac48"
    android:padding="4dp"
    tools:context="com.example.android.happyfailure.MainActivity">
    <ImageView
        android:src="@drawable/marathon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dear Ivan,"
        android:id="@+id/ivan"
        android:textColor="@android:color/white"
        android:textSize="36dp"
        android:padding="45dp"
        android:fontFamily="cursive"/>
    <TextView
        android:id="@+id/wish"
        android:layout_below="@id/ivan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:fontFamily="cursive"
        android:text="Happy failure at today's marathon! That's the best way to become better... so keep failing and appreciate it!" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="With love, Ellie."
        android:layout_alignParentBottom="true"
        android:textSize="36dp"
        android:paddingBottom="45dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/white"/>
</RelativeLayout>
